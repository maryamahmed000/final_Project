		{
			"name": "Task2",
			"item": [
				{
					"name": "Verifying API Response Data",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Response should contain correct user data\", function () {\r",
									"    let jsonData = pm.response.json();\r",
									"\r",
									"    // Verify the response has a \"data\" object\r",
									"    pm.expect(jsonData).to.have.property(\"data\");\r",
									"\r",
									"    // Validate fields inside \"data\"\r",
									"    pm.expect(jsonData.data).to.have.property(\"id\", 2);\r",
									"    pm.expect(jsonData.data).to.have.property(\"email\").that.is.a(\"string\");\r",
									"    pm.expect(jsonData.data).to.have.property(\"first_name\").that.is.a(\"string\");\r",
									"    pm.expect(jsonData.data).to.have.property(\"last_name\").that.is.a(\"string\");\r",
									"    pm.expect(jsonData.data).to.have.property(\"avatar\").that.is.a(\"string\");\r",
									"\r",
									"    // Verify the response has a \"support\" object\r",
									"    pm.expect(jsonData).to.have.property(\"support\");\r",
									"    pm.expect(jsonData.support).to.have.property(\"url\").that.is.a(\"string\");\r",
									"    pm.expect(jsonData.support).to.have.property(\"text\").that.is.a(\"string\");\r",
									"});"
								],
								"type": "text/javascript",
								"packages": {}
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "https://reqres.in/api/users/2",
							"protocol": "https",
							"host": [
